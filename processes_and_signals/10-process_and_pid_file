#!/usr/bin/env bash
# This script creates a PID file, prints messages indefinitely, and handles signals

PID_FILE="/var/run/myscript.pid"

# Create PID file
echo $$ > "$PID_FILE"

# Function to terminate process safely
terminate() {
  rm -f "$PID_FILE"
  exit
}

# Signal traps
trap 'echo "I hate the kill command"; terminate' SIGTERM
trap 'echo "Y U no love me?!"' SIGINT
trap 'terminate' SIGQUIT

# Infinite loop
while true; do
  echo "To infinity and beyond"
  sleep 2
done
