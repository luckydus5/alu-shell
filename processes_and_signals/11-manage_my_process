#!/usr/bin/env bash
# Init script to manage the manage_my_process script

PID_FILE="/var/run/my_process.pid"
SCRIPT="./manage_my_process"

start() {
  $SCRIPT &
  echo $! > "$PID_FILE"
  echo "manage_my_process started"
}

stop() {
  if [[ -f "$PID_FILE" ]]; then
    kill "$(cat "$PID_FILE")"
    rm -f "$PID_FILE"
  fi
  echo "manage_my_process stopped"
}

restart() {
  if [[ -f "$PID_FILE" ]]; then
    kill "$(cat "$PID_FILE")"
    rm -f "$PID_FILE"
  fi
  $SCRIPT &
  echo $! > "$PID_FILE"
  echo "manage_my_process restarted"
}

case "$1" in
  start) start ;;
  stop) stop ;;
  restart) restart ;;
  *) echo "Usage: manage_my_process {start|stop|restart}" ;;
esac

